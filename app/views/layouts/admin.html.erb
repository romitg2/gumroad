<!DOCTYPE html>
<html class="admin" lang="en">
  <%= render("layouts/admin/head") %>

  <% custom_context = RenderingExtension.custom_context(self) %>

  <%= tag.body class: class_names(@body_class, "responsive", "responsive-nav", "is-logged-in", "is-nav-visible") do %>
    <%= tag.div id: "design-settings", data: { settings: custom_context[:design_settings].to_json }, class: "hidden" %>
    <%= tag.div id: "user-agent-info", data: { settings: custom_context[:user_agent_info].to_json }, class: "hidden" %>

    <%= yield %>

    <%= javascript_include_tag "application" %>
    <%= load_pack("admin_inertia") %>
    <%= yield :script %>
  <% end %>
</html>
